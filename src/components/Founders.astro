---
// Founders Section Component - Simple 3-Card Row Layout
import { useTranslations } from '../i18n/utils';

export interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = useTranslations(lang as any);
---

<!-- Founders Section -->
<section id="founders" class="py-24 relative overflow-hidden" aria-labelledby="founders-title">
  <!-- Background gradient -->
  <div class="absolute inset-0 bg-gradient-to-b from-transparent via-indigo-500/5 to-transparent" aria-hidden="true"></div>
  
  <div class="container mx-auto px-6 relative z-10">
    <div class="text-center mb-16">
      <h2 id="founders-title" class="text-4xl md:text-5xl font-bold text-white tracking-tight mb-4" set:html={t('founders.title')}></h2>
      <p class="text-lg md:text-xl text-gray-400 max-w-3xl mx-auto">
        {t('founders.subtitle')}
      </p>
    </div>

    <!-- Simple 3-Card Row Layout -->
    <div class="grid lg:grid-cols-3 gap-6 lg:gap-8 max-w-6xl mx-auto">
      
      <!-- Antoine Card - Tech -->
      <article class="glass-card p-8 rounded-3xl relative overflow-hidden group hover:border-indigo-500/40 transition-all duration-300">
        <!-- Gradient glow -->
        <div class="absolute top-0 right-0 w-48 h-48 bg-gradient-to-br from-indigo-500/20 to-blue-500/20 rounded-full blur-3xl -mr-24 -mt-24 group-hover:scale-150 transition-transform duration-700" aria-hidden="true"></div>
        
        <div class="relative z-10 flex flex-col items-center text-center">
          <!-- Profile Image -->
          <div class="relative mb-6 group-hover:scale-105 transition-transform duration-300">
            <img 
              src="https://media.licdn.com/dms/image/v2/D4E03AQGbMOPlZjlTwQ/profile-displayphoto-shrink_800_800/profile-displayphoto-shrink_800_800/0/1695129836511?e=1756944000&v=beta&t=49yf0hPlB221BQuninTKfv-xROUsYoZwUbRB8iOkJyw" 
              alt="Antoine" 
              class="w-28 h-28 rounded-2xl border-2 border-indigo-500/30 object-cover" 
              onerror="this.onerror=null;this.src='https://placehold.co/112x112/1E293B/8A70D6?text=A';"
            />
            <!-- Tech badge -->
            <div class="absolute -bottom-2 -right-2 w-11 h-11 bg-gradient-to-br from-indigo-500 to-blue-600 rounded-xl flex items-center justify-center shadow-lg shadow-indigo-500/50">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white">
                <path d="m18 16 4-4-4-4"/>
                <path d="m6 8-4 4 4 4"/>
                <path d="m14.5 4-5 16"/>
              </svg>
            </div>
          </div>
          
          <!-- Name & Role -->
          <h3 class="text-2xl font-bold text-white mb-2 group-hover:text-indigo-300 transition-colors">Antoine</h3>
          <p class="text-indigo-400 font-semibold text-lg mb-4">{t('antoine.role')}</p>
          
          <!-- Description -->
          <p class="text-gray-300 leading-relaxed text-sm mb-6">
            {t('antoine.desc')}
          </p>
          
          <!-- LinkedIn Button -->
          <a 
            href="https://www.linkedin.com/in/antoinesrvt/" 
            target="_blank" 
            rel="noopener noreferrer" 
            class="inline-flex items-center gap-2 px-4 py-2 bg-blue-500/10 hover:bg-blue-500/20 border border-blue-500/30 rounded-xl transition-all duration-300 hover:scale-105 text-blue-300 text-sm font-semibold w-full justify-center"
            aria-label="LinkedIn Antoine"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
            Connect
          </a>
        </div>
      </article>

      <!-- Samir Card - Marketing -->
      <article class="glass-card p-8 rounded-3xl relative overflow-hidden group hover:border-purple-500/40 transition-all duration-300">
        <!-- Gradient glow -->
        <div class="absolute top-0 left-1/2 w-48 h-48 bg-gradient-to-br from-purple-500/20 to-pink-500/20 rounded-full blur-3xl -ml-24 -mt-24 group-hover:scale-150 transition-transform duration-700" aria-hidden="true"></div>
        
        <div class="relative z-10 flex flex-col items-center text-center">
          <!-- Profile Image -->
          <div class="relative mb-6 group-hover:scale-105 transition-transform duration-300">
            <img 
              src="https://media.licdn.com/dms/image/v2/D4E03AQH9Vx1L0Kq3ag/profile-displayphoto-shrink_800_800/profile-displayphoto-shrink_800_800/0/1731933057965?e=1756944000&v=beta&t=I3GctbQ-eINCOXtcWZNfWeAWDNGk8tGW4clH0tji_uM" 
              alt="Samir" 
              class="w-28 h-28 rounded-2xl border-2 border-purple-500/30 object-cover" 
              onerror="this.onerror=null;this.src='https://placehold.co/112x112/1E293B/8A70D6?text=S';"
            />
            <!-- Marketing badge -->
            <div class="absolute -bottom-2 -right-2 w-11 h-11 bg-gradient-to-br from-purple-500 to-pink-600 rounded-xl flex items-center justify-center shadow-lg shadow-purple-500/50">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white">
                <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
                <circle cx="9" cy="7" r="4"/>
                <path d="M22 21v-2a4 4 0 0 0-3-3.87"/>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
              </svg>
            </div>
          </div>
          
          <!-- Name & Role -->
          <h3 class="text-2xl font-bold text-white mb-2 group-hover:text-purple-300 transition-colors">Samir</h3>
          <p class="text-purple-400 font-semibold text-lg mb-4">{t('samir.role')}</p>
          
          <!-- Description -->
          <p class="text-gray-300 leading-relaxed text-sm mb-6">
            {t('samir.desc')}
          </p>
          
          <!-- LinkedIn Button -->
          <a 
            href="https://www.linkedin.com/in/tsamir/" 
            target="_blank" 
            rel="noopener noreferrer" 
            class="inline-flex items-center gap-2 px-4 py-2 bg-blue-500/10 hover:bg-blue-500/20 border border-blue-500/30 rounded-xl transition-all duration-300 hover:scale-105 text-blue-300 text-sm font-semibold w-full justify-center"
            aria-label="LinkedIn Samir"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
            Connect
          </a>
        </div>
      </article>

      <!-- Aaron Card - Finance -->
      <article class="glass-card p-8 rounded-3xl relative overflow-hidden group hover:border-green-500/40 transition-all duration-300">
        <!-- Gradient glow -->
        <div class="absolute bottom-0 left-0 w-48 h-48 bg-gradient-to-tr from-green-500/20 to-emerald-500/20 rounded-full blur-3xl -ml-24 -mb-24 group-hover:scale-150 transition-transform duration-700" aria-hidden="true"></div>
        
        <div class="relative z-10 flex flex-col items-center text-center">
          <!-- Profile Image (Placeholder) -->
          <div class="relative mb-6 group-hover:scale-105 transition-transform duration-300">
            <div class="w-28 h-28 rounded-2xl border-2 border-green-500/30 bg-gradient-to-br from-green-900/50 to-emerald-900/50 flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-400">
                <line x1="12" y1="1" x2="12" y2="23"></line>
                <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
              </svg>
            </div>
            <!-- Finance badge -->
            <div class="absolute -bottom-2 -right-2 w-11 h-11 bg-gradient-to-br from-green-500 to-emerald-600 rounded-xl flex items-center justify-center shadow-lg shadow-green-500/50">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white">
                <path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
              </svg>
            </div>
          </div>
          
          <!-- Name & Role -->
          <h3 class="text-2xl font-bold text-white mb-2 group-hover:text-green-300 transition-colors">Aaron</h3>
          <p class="text-green-400 font-semibold text-lg mb-4">{t('aaron.role')}</p>
          
          <!-- Description -->
          <p class="text-gray-300 leading-relaxed text-sm mb-6">
            {t('aaron.desc')}
          </p>
          
          <!-- Badge (no LinkedIn) -->
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-green-500/10 border border-green-500/30 rounded-xl text-green-300 text-sm font-semibold w-full justify-center">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            DeFi Expert
          </div>
        </div>
      </article>

    </div>
  </div>
</section>
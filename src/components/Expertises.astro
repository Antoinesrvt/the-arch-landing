---
// Expertises Section Component
import { useTranslations } from '../i18n/utils';
import FinanceExpertises from './expertises/FinanceExpertises.astro';
import TechExpertises from './expertises/TechExpertises.astro';
import MarketingExpertises from './expertises/MarketingExpertises.astro';
import StrategyExpertises from './expertises/StrategyExpertises.astro';

export interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = useTranslations(lang as any);
---

<!-- Expertises Section -->
<section id="expertises" class="py-24" aria-labelledby="expertises-title">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16 animate-title">
      <h2 id="expertises-title" class="text-4xl md:text-5xl font-bold text-white tracking-tight" set:html={t('expertises.title')}>
      </h2>
      <p class="mt-4 text-lg text-secondary-text max-w-3xl mx-auto">
        {t('expertises.subtitle')}
      </p>
    </div>

    <div class="glass-card rounded-2xl p-2 md:p-4 animate-fade-in">
      <!-- Tabs -->
      <div class="expertise-tabs flex flex-wrap justify-center md:justify-start space-x-2 md:space-x-8 mb-8 px-4" role="tablist" aria-label="Expertises">
        <button class="expertise-tab active font-semibold py-3 px-2 md:px-4 text-base md:text-lg" data-tab="finance" role="tab" aria-selected="true" aria-controls="tab-finance">{t('expertises.tab.finance')}</button>
        <button class="expertise-tab font-semibold py-3 px-2 md:px-4 text-base md:text-lg" data-tab="tech" role="tab" aria-selected="false" aria-controls="tab-tech">{t('expertises.tab.tech')}</button>
        <button class="expertise-tab font-semibold py-3 px-2 md:px-4 text-base md:text-lg" data-tab="marketing" role="tab" aria-selected="false" aria-controls="tab-marketing">{t('expertises.tab.marketing')}</button>
        <button class="expertise-tab font-semibold py-3 px-2 md:px-4 text-base md:text-lg" data-tab="strategy" role="tab" aria-selected="false" aria-controls="tab-strategy">{t('expertises.tab.strategy')}</button>
      </div>

      <!-- Tab Content -->
      <div class="p-4 md:p-8">
        <!-- Finance Content -->
        <div id="tab-finance" class="expertise-content active" role="tabpanel" aria-labelledby="finance-tab">
          <FinanceExpertises />
        </div>
        <!-- Tech Content -->
        <div id="tab-tech" class="expertise-content" role="tabpanel" aria-labelledby="tech-tab">
          <TechExpertises />
        </div>
        <!-- Marketing Content -->
        <div id="tab-marketing" class="expertise-content" role="tabpanel" aria-labelledby="marketing-tab">
          <MarketingExpertises />
        </div>
        <!-- Strategy Content -->
        <div id="tab-strategy" class="expertise-content" role="tabpanel" aria-labelledby="strategy-tab">
          <StrategyExpertises />
        </div>
      </div>
    </div>
  </div>
</section>




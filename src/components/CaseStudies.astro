---
// Case Studies Section Component
import { useTranslations } from '../i18n/utils';

export interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = useTranslations(lang as any);
---

<!-- Case Studies Section -->
<section id="case-studies" class="py-24" aria-labelledby="case-studies-title">
  <div class="container mx-auto px-6">
    <div class="text-center mb-20 animate-title">
      <h2 id="case-studies-title" class="text-4xl md:text-5xl font-bold text-white tracking-tight" set:html={t('case-studies.title')}>
      </h2>
      <p class="mt-4 text-lg text-secondary-text max-w-3xl mx-auto">
        {t('case-studies.subtitle')}
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
      <!-- Case Study 1: The Architech -->
      <article class="glass-card realisation-card p-6 lg:p-8 rounded-2xl flex flex-col animate-card group hover:scale-105 transition-transform duration-300">
        <h3 class="text-2xl font-bold text-white mb-3">{t('case-study1.title')}</h3>
        <p class="text-secondary-text flex-grow mb-6">
          {t('case-study1.desc')}
        </p>
        <div class="flex flex-wrap gap-2 mb-6">
          <span class="text-xs font-semibold py-1 px-3 rounded-full bg-indigo-500/15 text-indigo-400 border border-indigo-500/30">SaaS</span>
          <span class="text-xs font-semibold py-1 px-3 rounded-full bg-green-500/15 text-green-400 border border-green-500/30">Dev Tool</span>
          <span class="text-xs font-semibold py-1 px-3 rounded-full bg-purple-500/15 text-purple-400 border border-purple-500/30">Startup</span>
        </div>
        <button class="mt-auto self-start border border-white/50 text-white font-semibold py-2 px-6 rounded-lg btn-secondary-animated case-study-btn" data-case-study="architech">
          {t('case-study.btn')}
        </button>
      </article>

      <!-- Case Study 2: Ago DeFi -->
      <article class="glass-card realisation-card p-6 lg:p-8 rounded-2xl flex flex-col animate-card group hover:scale-105 transition-transform duration-300">
        <h3 class="text-2xl font-bold text-white mb-3">{t('case-study2.title')}</h3>
        <p class="text-secondary-text flex-grow mb-6">
          {t('case-study2.desc')}
        </p>
        <div class="flex flex-wrap gap-2 mb-6">
          <span class="text-xs font-semibold py-1 px-3 rounded-full bg-green-500/15 text-green-400 border border-green-500/30">DeFi</span>
          <span class="text-xs font-semibold py-1 px-3 rounded-full bg-purple-500/15 text-purple-400 border border-purple-500/30">Community</span>
          <span class="text-xs font-semibold py-1 px-3 rounded-full bg-orange-500/15 text-orange-400 border border-orange-500/30">Marketing</span>
        </div>
        <button class="mt-auto self-start border border-white/50 text-white font-semibold py-2 px-6 rounded-lg btn-secondary-animated case-study-btn" data-case-study="agodefi">
          {t('case-study.btn')}
        </button>
      </article>

      <!-- Case Study 3: Hashguard -->
      <article class="glass-card realisation-card p-6 lg:p-8 rounded-2xl flex flex-col animate-card group hover:scale-105 transition-transform duration-300">
        <h3 class="text-2xl font-bold text-white mb-3">{t('case-study3.title')}</h3>
        <p class="text-secondary-text flex-grow mb-6">
          {t('case-study3.desc')}
        </p>
        <div class="flex flex-wrap gap-2 mb-6">
          <span class="text-xs font-semibold py-1 px-3 rounded-full bg-blue-500/15 text-blue-400 border border-blue-500/30">CTO Service</span>
          <span class="text-xs font-semibold py-1 px-3 rounded-full bg-indigo-500/15 text-indigo-400 border border-indigo-500/30">POC</span>
          <span class="text-xs font-semibold py-1 px-3 rounded-full bg-green-500/15 text-green-400 border border-green-500/30">Fullstack</span>
        </div>
        <button class="mt-auto self-start border border-white/50 text-white font-semibold py-2 px-6 rounded-lg btn-secondary-animated case-study-btn" data-case-study="hashguard">
          {t('case-study.btn')}
        </button>
      </article>
    </div>
  </div>
</section>


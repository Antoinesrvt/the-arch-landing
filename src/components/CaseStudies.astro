---
// Case Studies Section Component
import { useTranslations } from '../i18n/utils';

export interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = useTranslations(lang as any);
---

<!-- Case Studies Section -->
<section id="case-studies" class="py-24 relative overflow-hidden" aria-labelledby="case-studies-title">
  <!-- Background effects -->
  <div class="absolute inset-0 bg-gradient-to-br from-indigo-500/5 via-transparent to-purple-500/5" aria-hidden="true"></div>
  <div class="absolute top-1/2 left-1/4 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl" aria-hidden="true"></div>
  
  <div class="container mx-auto px-6 relative z-10">
    <div class="text-center mb-16">
      <h2 id="case-studies-title" class="text-4xl md:text-5xl font-bold text-white tracking-tight mb-4" set:html={t('case-studies.title')}></h2>
      <p class="text-lg md:text-xl text-gray-400 max-w-3xl mx-auto">
        {t('case-studies.subtitle')}
      </p>
    </div>

    <!-- Results-Focused Grid with Asymmetric Layout -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-7xl mx-auto">
      <!-- Case Study 1: The Architech - Featured Large Card -->
      <article class="glass-card lg:col-span-2 p-8 lg:p-10 rounded-3xl flex flex-col relative overflow-hidden group">
        <!-- Gradient overlay -->
        <div class="absolute top-0 right-0 w-80 h-80 bg-gradient-to-br from-indigo-500/20 to-purple-500/20 rounded-full blur-3xl -mr-40 -mt-40 group-hover:scale-150 transition-transform duration-700" aria-hidden="true"></div>
        
        <div class="relative z-10">
          <!-- Tags -->
          <div class="flex flex-wrap gap-2 mb-6">
            <span class="text-xs font-semibold py-1.5 px-3 rounded-full bg-indigo-500/15 text-indigo-300 border border-indigo-500/30">SaaS</span>
            <span class="text-xs font-semibold py-1.5 px-3 rounded-full bg-green-500/15 text-green-300 border border-green-500/30">Dev Tool</span>
            <span class="text-xs font-semibold py-1.5 px-3 rounded-full bg-purple-500/15 text-purple-300 border border-purple-500/30">Startup</span>
          </div>
          
          <h3 class="text-3xl font-bold text-white mb-4 group-hover:text-indigo-300 transition-colors">{t('case-study1.title')}</h3>
          <p class="text-gray-300 text-lg mb-8 leading-relaxed">
            {t('case-study1.desc')}
          </p>
          
          <!-- Results Grid -->
          <div class="grid grid-cols-2 sm:grid-cols-3 gap-4 mb-8">
            <div class="p-4 rounded-xl bg-white/5 border border-white/10">
              <div class="text-2xl font-bold text-indigo-400 mb-1">100%</div>
              <div class="text-xs text-gray-400">Code Coverage</div>
            </div>
            <div class="p-4 rounded-xl bg-white/5 border border-white/10">
              <div class="text-2xl font-bold text-green-400 mb-1">50+</div>
              <div class="text-xs text-gray-400">Features Built</div>
            </div>
            <div class="p-4 rounded-xl bg-white/5 border border-white/10 col-span-2 sm:col-span-1">
              <div class="text-2xl font-bold text-purple-400 mb-1">3 Months</div>
              <div class="text-xs text-gray-400">To MVP</div>
            </div>
          </div>
          
          <button class="group/btn inline-flex items-center gap-2 px-6 py-3 bg-white/10 hover:bg-white/15 border border-white/20 hover:border-indigo-500/50 text-white font-semibold rounded-xl transition-all duration-300 hover:scale-105 case-study-btn" data-case-study="architech">
            <span>{t('case-study.btn')}</span>
            <svg class="w-4 h-4 group-hover/btn:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </button>
        </div>
      </article>

      <!-- Case Study 2: Ago DeFi - Compact Card -->
      <article class="glass-card p-6 lg:p-8 rounded-2xl flex flex-col relative overflow-hidden group">
        <!-- Gradient glow -->
        <div class="absolute bottom-0 left-0 w-64 h-64 bg-gradient-to-tr from-green-500/20 to-emerald-500/20 rounded-full blur-3xl -ml-32 -mb-32 group-hover:scale-150 transition-transform duration-700" aria-hidden="true"></div>
        
        <div class="relative z-10 flex flex-col h-full">
          <div class="flex flex-wrap gap-2 mb-4">
            <span class="text-xs font-semibold py-1 px-3 rounded-full bg-green-500/15 text-green-300 border border-green-500/30">DeFi</span>
            <span class="text-xs font-semibold py-1 px-3 rounded-full bg-purple-500/15 text-purple-300 border border-purple-500/30">Community</span>
            <span class="text-xs font-semibold py-1 px-3 rounded-full bg-orange-500/15 text-orange-300 border border-orange-500/30">Marketing</span>
          </div>
          
          <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-green-300 transition-colors">{t('case-study2.title')}</h3>
          <p class="text-gray-400 mb-6 flex-grow">
            {t('case-study2.desc')}
          </p>
          
          <!-- Compact Results -->
          <div class="grid grid-cols-2 gap-3 mb-6">
            <div class="p-3 rounded-lg bg-white/5 border border-white/10">
              <div class="text-xl font-bold text-green-400">+300%</div>
              <div class="text-xs text-gray-400">Community Growth</div>
            </div>
            <div class="p-3 rounded-lg bg-white/5 border border-white/10">
              <div class="text-xl font-bold text-emerald-400">10K+</div>
              <div class="text-xs text-gray-400">Active Users</div>
            </div>
          </div>
          
          <button class="group/btn inline-flex items-center gap-2 px-5 py-2.5 bg-white/10 hover:bg-white/15 border border-white/20 hover:border-green-500/50 text-white font-semibold rounded-lg transition-all duration-300 hover:scale-105 case-study-btn" data-case-study="agodefi">
            <span>{t('case-study.btn')}</span>
            <svg class="w-4 h-4 group-hover/btn:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </button>
        </div>
      </article>

      <!-- Case Study 3: Hashguard - Compact Card -->
      <article class="glass-card p-6 lg:p-8 rounded-2xl flex flex-col relative overflow-hidden group">
        <!-- Gradient glow -->
        <div class="absolute top-0 right-0 w-64 h-64 bg-gradient-to-bl from-blue-500/20 to-indigo-500/20 rounded-full blur-3xl -mr-32 -mt-32 group-hover:scale-150 transition-transform duration-700" aria-hidden="true"></div>
        
        <div class="relative z-10 flex flex-col h-full">
          <div class="flex flex-wrap gap-2 mb-4">
            <span class="text-xs font-semibold py-1 px-3 rounded-full bg-blue-500/15 text-blue-300 border border-blue-500/30">CTO Service</span>
            <span class="text-xs font-semibold py-1 px-3 rounded-full bg-indigo-500/15 text-indigo-300 border border-indigo-500/30">POC</span>
            <span class="text-xs font-semibold py-1 px-3 rounded-full bg-green-500/15 text-green-300 border border-green-500/30">Fullstack</span>
          </div>
          
          <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-blue-300 transition-colors">{t('case-study3.title')}</h3>
          <p class="text-gray-400 mb-6 flex-grow">
            {t('case-study3.desc')}
          </p>
          
          <!-- Compact Results -->
          <div class="grid grid-cols-2 gap-3 mb-6">
            <div class="p-3 rounded-lg bg-white/5 border border-white/10">
              <div class="text-xl font-bold text-blue-400">6 Weeks</div>
              <div class="text-xs text-gray-400">POC Delivered</div>
            </div>
            <div class="p-3 rounded-lg bg-white/5 border border-white/10">
              <div class="text-xl font-bold text-indigo-400">CTO+</div>
              <div class="text-xs text-gray-400">Tech Guidance</div>
            </div>
          </div>
          
          <button class="group/btn inline-flex items-center gap-2 px-5 py-2.5 bg-white/10 hover:bg-white/15 border border-white/20 hover:border-blue-500/50 text-white font-semibold rounded-lg transition-all duration-300 hover:scale-105 case-study-btn" data-case-study="hashguard">
            <span>{t('case-study.btn')}</span>
            <svg class="w-4 h-4 group-hover/btn:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </button>
        </div>
      </article>
    </div>
  </div>
</section>


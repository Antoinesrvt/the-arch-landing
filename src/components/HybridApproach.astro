---
// Hybrid Approach Section Component
import { useTranslations } from '../i18n/utils';

export interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = useTranslations(lang as any);
---

<!-- Hybrid Approach Section -->
<section id="approach" class="py-24" aria-labelledby="approach-title">
  <div class="container mx-auto px-6">
    <div class="text-center mb-20 animate-title">
      <h2 id="approach-title" class="text-4xl md:text-5xl font-bold text-white tracking-tight" set:html={t('approach.title')}>
      </h2>
      <p class="mt-4 text-lg text-secondary-text max-w-3xl mx-auto">
        {t('approach.subtitle')}
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      <!-- Strategy & Vision -->
      <article class="glass-card p-8 rounded-2xl animate-card text-center">
        <div class="flex items-center justify-center h-16 w-16 rounded-full bg-purple-500/10 mb-6 mx-auto border border-purple-500/30" aria-hidden="true">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-purple-400">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-white mb-4">{t('approach1.title')}</h3>
        <p class="text-secondary-text mb-6">
          {t('approach1.desc')}
        </p>
        <div class="flex flex-wrap justify-center gap-2">
          <span class="text-xs font-semibold py-1 px-3 rounded-full bg-purple-500/15 text-purple-400 border border-purple-500/30">Tech</span>
          <span class="text-xs font-semibold py-1 px-3 rounded-full bg-green-500/15 text-green-400 border border-green-500/30">Finance</span>
          <span class="text-xs font-semibold py-1 px-3 rounded-full bg-indigo-500/15 text-indigo-400 border border-indigo-500/30">Communauté</span>
        </div>
      </article>

      <!-- Specialized Execution -->
      <article class="glass-card p-8 rounded-2xl animate-card text-center">
        <div class="flex items-center justify-center h-16 w-16 rounded-full bg-green-500/10 mb-6 mx-auto border border-green-500/30" aria-hidden="true">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-400">
            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
            <circle cx="9" cy="7" r="4"/>
            <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
            <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-white mb-4">{t('approach2.title')}</h3>
        <p class="text-secondary-text mb-6">
          {t('approach2.desc')}
        </p>
        <div class="flex flex-wrap justify-center gap-2">
          <span class="text-xs font-semibold py-1 px-3 rounded-full bg-green-500/15 text-green-400 border border-green-500/30">Dev</span>
          <span class="text-xs font-semibold py-1 px-3 rounded-full bg-green-500/15 text-green-400 border border-green-500/30">Design</span>
          <span class="text-xs font-semibold py-1 px-3 rounded-full bg-green-500/15 text-green-400 border border-green-500/30">Légal</span>
          <span class="text-xs font-semibold py-1 px-3 rounded-full bg-green-500/15 text-green-400 border border-green-500/30">Grants</span>
        </div>
      </article>

      <!-- Media & Community -->
      <article class="glass-card p-8 rounded-2xl animate-card text-center">
        <div class="flex items-center justify-center h-16 w-16 rounded-full bg-indigo-500/10 mb-6 mx-auto border border-indigo-500/30" aria-hidden="true">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-indigo-400">
            <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/>
            <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-white mb-4">{t('approach3.title')}</h3>
        <p class="text-secondary-text mb-6">
          {t('approach3.desc')}
        </p>
        <div class="flex flex-wrap justify-center gap-2">
          <span class="text-xs font-semibold py-1 px-3 rounded-full bg-indigo-500/15 text-indigo-400 border border-indigo-500/30">Discord</span>
          <span class="text-xs font-semibold py-1 px-3 rounded-full bg-indigo-500/15 text-indigo-400 border border-indigo-500/30">YouTube</span>
          <span class="text-xs font-semibold py-1 px-3 rounded-full bg-indigo-500/15 text-indigo-400 border border-indigo-500/30">Twitch</span>
          <span class="text-xs font-semibold py-1 px-3 rounded-full bg-indigo-500/15 text-indigo-400 border border-indigo-500/30">Blog</span>
        </div>
      </article>
    </div>

   
   
  </div>
</section>
 
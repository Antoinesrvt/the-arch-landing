---
// Ecosystem Section Component
import { useTranslations } from '../i18n/utils';

export interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = useTranslations(lang as any);
---

<!-- Ecosystem Section -->
<section id="ecosysteme" class="py-24" aria-labelledby="ecosystem-title">
  <div class="container mx-auto px-6">
    <div class="text-center mb-20 animate-title">
      <h2 id="ecosystem-title" class="text-4xl md:text-5xl font-bold text-white tracking-tight" set:html={t('ecosystem.title')}>
      </h2>
      <p class="mt-4 text-lg text-secondary-text max-w-3xl mx-auto">
        {t('ecosystem.subtitle')}
      </p>
    </div>
    
    <!-- Mobile View -->
    <div class="lg:hidden flex flex-wrap justify-center items-center gap-4">
      <div class="partner-tag font-medium py-2 px-5 rounded-full">{t('partner1')}</div>
      <div class="partner-tag font-medium py-2 px-5 rounded-full">{t('partner2')}</div>
      <div class="partner-tag font-medium py-2 px-5 rounded-full">{t('partner3')}</div>
      <div class="partner-tag font-medium py-2 px-5 rounded-full">{t('partner4')}</div>
      <div class="partner-tag font-medium py-2 px-5 rounded-full">{t('partner5')}</div>
      <div class="partner-tag font-medium py-2 px-5 rounded-full">{t('partner6')}</div>
    </div>
    <!-- Desktop View -->
    <div id="ecosystem-container" class="hidden lg:block">
      <div class="partner-tag font-medium py-2 px-5 rounded-full">{t('partner1')}</div>
      <div class="partner-tag font-medium py-2 px-5 rounded-full">{t('partner2')}</div>
      <div class="partner-tag font-medium py-2 px-5 rounded-full">{t('partner3')}</div>
      <div class="partner-tag font-medium py-2 px-5 rounded-full">{t('partner4')}</div>
      <div class="partner-tag font-medium py-2 px-5 rounded-full">{t('partner5')}</div>
      <div class="partner-tag font-medium py-2 px-5 rounded-full">{t('partner6')}</div>
    </div>
  </div>
</section>




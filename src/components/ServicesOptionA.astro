---
// Services Section Component - OPTION A: FLUID ORBIT DESIGN
import { useTranslations } from '../i18n/utils';
import type { Language, TranslationFunction } from '../types';

export interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = useTranslations(lang) as TranslationFunction;
---

<section id="services-option-a" class="py-24 relative overflow-hidden" aria-labelledby="services-title-a">
  <!-- Animated background gradient -->
  <div class="absolute inset-0 bg-gradient-to-br from-purple-900/20 via-indigo-900/20 to-blue-900/20" aria-hidden="true"></div>
  
  <!-- Floating orbs for depth -->
  <div class="absolute top-20 left-10 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl animate-pulse" aria-hidden="true"></div>
  <div class="absolute bottom-20 right-10 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl animate-pulse delay-1000" aria-hidden="true"></div>
  
  <div class="container mx-auto px-6 relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-20">
      <div class="inline-block mb-4 px-4 py-2 bg-purple-500/10 border border-purple-500/30 rounded-full text-purple-300 text-sm font-semibold">
        Option A: Fluid Orbit
      </div>
      <h2 id="services-title-a" class="text-4xl md:text-5xl font-bold text-white tracking-tight mb-4" set:html={t('services.title')}></h2>
      <p class="text-lg md:text-xl text-gray-400 max-w-3xl mx-auto">
        {t('services.subtitle')}
      </p>
    </div>

    <!-- FLUID ORBIT LAYOUT - Desktop -->
    <div class="hidden lg:block max-w-6xl mx-auto mb-20">
      <div class="relative w-full min-h-[800px]">
        
        <!-- Central Hub - Smaller & More Elegant -->
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 z-20">
          <div class="relative group cursor-pointer">
            <!-- Pulsing rings -->
            <div class="absolute inset-0 w-32 h-32 rounded-full bg-purple-500/20 animate-ping opacity-75"></div>
            <div class="absolute inset-0 w-32 h-32 rounded-full bg-blue-500/20 animate-ping opacity-50 delay-500"></div>
            
            <!-- Main hub -->
            <div class="relative w-32 h-32 rounded-full bg-gradient-to-br from-purple-600 via-indigo-600 to-blue-600 border-2 border-white/30 backdrop-blur-lg flex items-center justify-center shadow-2xl shadow-purple-500/50 group-hover:scale-110 transition-all duration-500">
              <div class="text-center">
                <div class="text-4xl font-bold bg-gradient-to-r from-white to-purple-200 bg-clip-text text-transparent mb-1">360°</div>
                <div class="text-xs text-white/80 font-semibold uppercase tracking-widest">
                  {lang === 'fr' ? 'Services' : 'Services'}
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Orbital Services with Flowing Paths -->
        
        <!-- TOP-LEFT: TECH (Orbit position 1) -->
        <div class="absolute top-12 left-16 w-80 animate-float-1">
          <div class="glass-card-orbit p-6 rounded-3xl border border-indigo-500/30 hover:border-indigo-500/60 transition-all duration-500 hover:scale-105 hover:-translate-y-2 group">
            <!-- Flowing connection line -->
            <svg class="absolute top-full left-1/2 -translate-x-1/2 w-64 h-64 pointer-events-none opacity-30 group-hover:opacity-50 transition-opacity" viewBox="0 0 200 200">
              <path 
                d="M 100 0 Q 120 50, 140 100" 
                stroke="url(#gradient-tech)" 
                stroke-width="2" 
                fill="none"
                stroke-dasharray="5 5"
                class="animate-dash"
              />
              <defs>
                <linearGradient id="gradient-tech" x1="0%" y1="0%" x2="100%" y2="100%">
                  <stop offset="0%" style="stop-color:#6366F1;stop-opacity:1" />
                  <stop offset="100%" style="stop-color:#8B5CF6;stop-opacity:0" />
                </linearGradient>
              </defs>
            </svg>
            
            <div class="flex items-start gap-4 mb-4">
              <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-indigo-500/20 to-indigo-600/30 border border-indigo-500/40 flex items-center justify-center shrink-0 group-hover:scale-110 group-hover:rotate-12 transition-all duration-500 shadow-lg shadow-indigo-500/30">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-indigo-300">
                  <path d="m18 16 4-4-4-4"/>
                  <path d="m6 8-4 4 4 4"/>
                  <path d="m14.5 4-5 16"/>
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-bold bg-gradient-to-r from-white to-indigo-200 bg-clip-text text-transparent mb-2 group-hover:from-indigo-300 group-hover:to-white transition-all">
                  {t('service1.title')}
                </h3>
                <p class="text-sm text-gray-300 leading-relaxed">
                  {t('service1.desc')}
                </p>
              </div>
            </div>
            <div class="flex flex-wrap gap-2">
              <span class="px-3 py-1.5 text-xs font-semibold bg-indigo-500/10 border border-indigo-500/30 text-indigo-200 rounded-full hover:bg-indigo-500/20 transition-colors">Smart Contracts</span>
              <span class="px-3 py-1.5 text-xs font-semibold bg-indigo-500/10 border border-indigo-500/30 text-indigo-200 rounded-full hover:bg-indigo-500/20 transition-colors">Audits</span>
              <span class="px-3 py-1.5 text-xs font-semibold bg-indigo-500/10 border border-indigo-500/30 text-indigo-200 rounded-full hover:bg-indigo-500/20 transition-colors">Gas Optim.</span>
            </div>
          </div>
        </div>

        <!-- TOP-RIGHT: FINANCE (Orbit position 2) -->
        <div class="absolute top-12 right-16 w-80 animate-float-2">
          <div class="glass-card-orbit p-6 rounded-3xl border border-emerald-500/30 hover:border-emerald-500/60 transition-all duration-500 hover:scale-105 hover:-translate-y-2 group">
            <!-- Flowing connection line -->
            <svg class="absolute top-full right-1/2 translate-x-1/2 w-64 h-64 pointer-events-none opacity-30 group-hover:opacity-50 transition-opacity" viewBox="0 0 200 200">
              <path 
                d="M 100 0 Q 80 50, 60 100" 
                stroke="url(#gradient-finance)" 
                stroke-width="2" 
                fill="none"
                stroke-dasharray="5 5"
                class="animate-dash"
              />
              <defs>
                <linearGradient id="gradient-finance" x1="0%" y1="0%" x2="100%" y2="100%">
                  <stop offset="0%" style="stop-color:#10B981;stop-opacity:1" />
                  <stop offset="100%" style="stop-color:#6366F1;stop-opacity:0" />
                </linearGradient>
              </defs>
            </svg>
            
            <div class="flex items-start gap-4 mb-4">
              <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-emerald-500/20 to-emerald-600/30 border border-emerald-500/40 flex items-center justify-center shrink-0 group-hover:scale-110 group-hover:rotate-12 transition-all duration-500 shadow-lg shadow-emerald-500/30">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-emerald-300">
                  <path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-bold bg-gradient-to-r from-white to-emerald-200 bg-clip-text text-transparent mb-2 group-hover:from-emerald-300 group-hover:to-white transition-all">
                  {t('service2.title')}
                </h3>
                <p class="text-sm text-gray-300 leading-relaxed">
                  {t('service2.desc')}
                </p>
              </div>
            </div>
            <div class="flex flex-wrap gap-2">
              <span class="px-3 py-1.5 text-xs font-semibold bg-emerald-500/10 border border-emerald-500/30 text-emerald-200 rounded-full hover:bg-emerald-500/20 transition-colors">Tokenomics</span>
              <span class="px-3 py-1.5 text-xs font-semibold bg-emerald-500/10 border border-emerald-500/30 text-emerald-200 rounded-full hover:bg-emerald-500/20 transition-colors">Fundraising</span>
              <span class="px-3 py-1.5 text-xs font-semibold bg-emerald-500/10 border border-emerald-500/30 text-emerald-200 rounded-full hover:bg-emerald-500/20 transition-colors">Compliance</span>
            </div>
          </div>
        </div>

        <!-- BOTTOM-LEFT: MARKETING (Orbit position 3) -->
        <div class="absolute bottom-12 left-16 w-80 animate-float-3">
          <div class="glass-card-orbit p-6 rounded-3xl border border-pink-500/30 hover:border-pink-500/60 transition-all duration-500 hover:scale-105 hover:translate-y-2 group">
            <!-- Flowing connection line -->
            <svg class="absolute bottom-full left-1/2 -translate-x-1/2 w-64 h-64 pointer-events-none opacity-30 group-hover:opacity-50 transition-opacity rotate-180" viewBox="0 0 200 200">
              <path 
                d="M 100 0 Q 120 50, 140 100" 
                stroke="url(#gradient-marketing)" 
                stroke-width="2" 
                fill="none"
                stroke-dasharray="5 5"
                class="animate-dash"
              />
              <defs>
                <linearGradient id="gradient-marketing" x1="0%" y1="0%" x2="100%" y2="100%">
                  <stop offset="0%" style="stop-color:#EC4899;stop-opacity:1" />
                  <stop offset="100%" style="stop-color:#8B5CF6;stop-opacity:0" />
                </linearGradient>
              </defs>
            </svg>
            
            <div class="flex items-start gap-4 mb-4">
              <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-pink-500/20 to-pink-600/30 border border-pink-500/40 flex items-center justify-center shrink-0 group-hover:scale-110 group-hover:rotate-12 transition-all duration-500 shadow-lg shadow-pink-500/30">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-pink-300">
                  <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
                  <circle cx="9" cy="7" r="4"/>
                  <path d="M22 21v-2a4 4 0 0 0-3-3.87"/>
                  <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-bold bg-gradient-to-r from-white to-pink-200 bg-clip-text text-transparent mb-2 group-hover:from-pink-300 group-hover:to-white transition-all">
                  {t('service3.title')}
                </h3>
                <p class="text-sm text-gray-300 leading-relaxed">
                  {t('service3.desc')}
                </p>
              </div>
            </div>
            <div class="flex flex-wrap gap-2">
              <span class="px-3 py-1.5 text-xs font-semibold bg-pink-500/10 border border-pink-500/30 text-pink-200 rounded-full hover:bg-pink-500/20 transition-colors">Community</span>
              <span class="px-3 py-1.5 text-xs font-semibold bg-pink-500/10 border border-pink-500/30 text-pink-200 rounded-full hover:bg-pink-500/20 transition-colors">Content</span>
              <span class="px-3 py-1.5 text-xs font-semibold bg-pink-500/10 border border-pink-500/30 text-pink-200 rounded-full hover:bg-pink-500/20 transition-colors">Media</span>
            </div>
          </div>
        </div>

        <!-- BOTTOM-RIGHT: STRATEGY (Orbit position 4) -->
        <div class="absolute bottom-12 right-16 w-80 animate-float-4">
          <div class="glass-card-orbit p-6 rounded-3xl border border-amber-500/30 hover:border-amber-500/60 transition-all duration-500 hover:scale-105 hover:translate-y-2 group">
            <!-- Flowing connection line -->
            <svg class="absolute bottom-full right-1/2 translate-x-1/2 w-64 h-64 pointer-events-none opacity-30 group-hover:opacity-50 transition-opacity rotate-180" viewBox="0 0 200 200">
              <path 
                d="M 100 0 Q 80 50, 60 100" 
                stroke="url(#gradient-strategy)" 
                stroke-width="2" 
                fill="none"
                stroke-dasharray="5 5"
                class="animate-dash"
              />
              <defs>
                <linearGradient id="gradient-strategy" x1="0%" y1="0%" x2="100%" y2="100%">
                  <stop offset="0%" style="stop-color:#F59E0B;stop-opacity:1" />
                  <stop offset="100%" style="stop-color:#8B5CF6;stop-opacity:0" />
                </linearGradient>
              </defs>
            </svg>
            
            <div class="flex items-start gap-4 mb-4">
              <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-amber-500/20 to-amber-600/30 border border-amber-500/40 flex items-center justify-center shrink-0 group-hover:scale-110 group-hover:rotate-12 transition-all duration-500 shadow-lg shadow-amber-500/30">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-amber-300">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-bold bg-gradient-to-r from-white to-amber-200 bg-clip-text text-transparent mb-2 group-hover:from-amber-300 group-hover:to-white transition-all">
                  {t('service4.title')}
                </h3>
                <p class="text-sm text-gray-300 leading-relaxed">
                  {t('service4.desc')}
                </p>
              </div>
            </div>
            <div class="flex flex-wrap gap-2">
              <span class="px-3 py-1.5 text-xs font-semibold bg-amber-500/10 border border-amber-500/30 text-amber-200 rounded-full hover:bg-amber-500/20 transition-colors">Vision</span>
              <span class="px-3 py-1.5 text-xs font-semibold bg-amber-500/10 border border-amber-500/30 text-amber-200 rounded-full hover:bg-amber-500/20 transition-colors">Coordination</span>
              <span class="px-3 py-1.5 text-xs font-semibold bg-amber-500/10 border border-amber-500/30 text-amber-200 rounded-full hover:bg-amber-500/20 transition-colors">Management</span>
            </div>
          </div>
        </div>

      </div>
    </div>

    <!-- Mobile Version: Elegant Stack -->
    <div class="lg:hidden space-y-6 max-w-xl mx-auto mb-20">
      
      <!-- 360° Badge for Mobile -->
      <div class="flex justify-center mb-8">
        <div class="relative">
          <div class="absolute inset-0 w-28 h-28 rounded-full bg-purple-500/20 animate-ping opacity-75"></div>
          <div class="relative w-28 h-28 rounded-full bg-gradient-to-br from-purple-600 via-indigo-600 to-blue-600 border-2 border-white/30 flex items-center justify-center shadow-2xl shadow-purple-500/50">
            <div class="text-center">
              <div class="text-4xl font-bold bg-gradient-to-r from-white to-purple-200 bg-clip-text text-transparent">360°</div>
              <div class="text-xs text-white/80 font-semibold uppercase tracking-widest">Services</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Mobile Services -->
      <article class="glass-card-orbit p-6 rounded-3xl border border-indigo-500/30">
        <div class="flex items-start gap-4 mb-4">
          <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-indigo-500/20 to-indigo-600/30 border border-indigo-500/40 flex items-center justify-center shrink-0 shadow-lg shadow-indigo-500/30">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-indigo-300">
              <path d="m18 16 4-4-4-4"/><path d="m6 8-4 4 4 4"/><path d="m14.5 4-5 16"/>
            </svg>
          </div>
          <div class="flex-1">
            <h3 class="text-xl font-bold bg-gradient-to-r from-white to-indigo-200 bg-clip-text text-transparent mb-2">{t('service1.title')}</h3>
            <p class="text-sm text-gray-300 leading-relaxed mb-3">{t('service1.desc')}</p>
            <div class="flex flex-wrap gap-2">
              <span class="px-3 py-1.5 text-xs font-semibold bg-indigo-500/10 border border-indigo-500/30 text-indigo-200 rounded-full">Smart Contracts</span>
              <span class="px-3 py-1.5 text-xs font-semibold bg-indigo-500/10 border border-indigo-500/30 text-indigo-200 rounded-full">Audits</span>
            </div>
          </div>
        </div>
      </article>

      <article class="glass-card-orbit p-6 rounded-3xl border border-emerald-500/30">
        <div class="flex items-start gap-4 mb-4">
          <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-emerald-500/20 to-emerald-600/30 border border-emerald-500/40 flex items-center justify-center shrink-0 shadow-lg shadow-emerald-500/30">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-emerald-300">
              <path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
            </svg>
          </div>
          <div class="flex-1">
            <h3 class="text-xl font-bold bg-gradient-to-r from-white to-emerald-200 bg-clip-text text-transparent mb-2">{t('service2.title')}</h3>
            <p class="text-sm text-gray-300 leading-relaxed mb-3">{t('service2.desc')}</p>
            <div class="flex flex-wrap gap-2">
              <span class="px-3 py-1.5 text-xs font-semibold bg-emerald-500/10 border border-emerald-500/30 text-emerald-200 rounded-full">Tokenomics</span>
              <span class="px-3 py-1.5 text-xs font-semibold bg-emerald-500/10 border border-emerald-500/30 text-emerald-200 rounded-full">Fundraising</span>
            </div>
          </div>
        </div>
      </article>

      <article class="glass-card-orbit p-6 rounded-3xl border border-pink-500/30">
        <div class="flex items-start gap-4 mb-4">
          <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-pink-500/20 to-pink-600/30 border border-pink-500/40 flex items-center justify-center shrink-0 shadow-lg shadow-pink-500/30">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-pink-300">
              <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/>
            </svg>
          </div>
          <div class="flex-1">
            <h3 class="text-xl font-bold bg-gradient-to-r from-white to-pink-200 bg-clip-text text-transparent mb-2">{t('service3.title')}</h3>
            <p class="text-sm text-gray-300 leading-relaxed mb-3">{t('service3.desc')}</p>
            <div class="flex flex-wrap gap-2">
              <span class="px-3 py-1.5 text-xs font-semibold bg-pink-500/10 border border-pink-500/30 text-pink-200 rounded-full">Community</span>
              <span class="px-3 py-1.5 text-xs font-semibold bg-pink-500/10 border border-pink-500/30 text-pink-200 rounded-full">Content</span>
            </div>
          </div>
        </div>
      </article>

      <article class="glass-card-orbit p-6 rounded-3xl border border-amber-500/30">
        <div class="flex items-start gap-4 mb-4">
          <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-amber-500/20 to-amber-600/30 border border-amber-500/40 flex items-center justify-center shrink-0 shadow-lg shadow-amber-500/30">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-amber-300">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
          </div>
          <div class="flex-1">
            <h3 class="text-xl font-bold bg-gradient-to-r from-white to-amber-200 bg-clip-text text-transparent mb-2">{t('service4.title')}</h3>
            <p class="text-sm text-gray-300 leading-relaxed mb-3">{t('service4.desc')}</p>
            <div class="flex flex-wrap gap-2">
              <span class="px-3 py-1.5 text-xs font-semibold bg-amber-500/10 border border-amber-500/30 text-amber-200 rounded-full">Vision</span>
              <span class="px-3 py-1.5 text-xs font-semibold bg-amber-500/10 border border-amber-500/30 text-amber-200 rounded-full">Coordination</span>
            </div>
          </div>
        </div>
      </article>
    </div>
  </div>
</section>

<style>
  .glass-card-orbit {
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(10px);
    box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
  }

  @keyframes float-1 {
    0%, 100% { transform: translateY(0px) translateX(0px); }
    50% { transform: translateY(-15px) translateX(10px); }
  }

  @keyframes float-2 {
    0%, 100% { transform: translateY(0px) translateX(0px); }
    50% { transform: translateY(-20px) translateX(-10px); }
  }

  @keyframes float-3 {
    0%, 100% { transform: translateY(0px) translateX(0px); }
    50% { transform: translateY(15px) translateX(10px); }
  }

  @keyframes float-4 {
    0%, 100% { transform: translateY(0px) translateX(0px); }
    50% { transform: translateY(20px) translateX(-10px); }
  }

  @keyframes dash {
    to {
      stroke-dashoffset: -20;
    }
  }

  .animate-float-1 {
    animation: float-1 8s ease-in-out infinite;
  }

  .animate-float-2 {
    animation: float-2 7s ease-in-out infinite;
  }

  .animate-float-3 {
    animation: float-3 9s ease-in-out infinite;
  }

  .animate-float-4 {
    animation: float-4 7.5s ease-in-out infinite;
  }

  .animate-dash {
    animation: dash 20s linear infinite;
  }

  .delay-500 {
    animation-delay: 0.5s;
  }

  .delay-1000 {
    animation-delay: 1s;
  }
</style>

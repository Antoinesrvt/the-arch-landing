---
// Network Section Component
import { useTranslations } from '../i18n/utils';

export interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = useTranslations(lang as any);
---

<!-- Network Section -->
<section id="network" class="py-24" aria-labelledby="network-title">
  <div class="container mx-auto px-6">
    <div class="text-center mb-20 animate-title">
      <h2 id="network-title" class="text-4xl md:text-5xl font-bold text-white tracking-tight" set:html={t('network.title')}>
      </h2>
      <p class="mt-4 text-lg text-secondary-text max-w-3xl mx-auto">
        {t('network.subtitle')}
      </p>
    </div>

    <!-- Expert Categories Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4 lg:gap-6 mb-16">
      <!-- Development & Security -->
      <article class="glass-card p-6 rounded-2xl animate-card group hover:scale-105 transition-transform duration-300">
        <div class="flex items-center mb-4">
          <div class="flex items-center justify-center h-12 w-12 rounded-xl bg-blue-500/10 mr-4 border border-blue-500/30">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-blue-400">
              <path d="m18 16 4-4-4-4"/>
              <path d="m6 8-4 4 4 4"/>
              <path d="m14.5 4-5 16"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white">{t('network.dev')}</h3>
        </div>
        <p class="text-secondary-text text-sm">Smart contracts, audits, architecture, L2 solutions</p>
      </article>

      <!-- Finance & Tokenomics -->
      <article class="glass-card p-6 rounded-2xl animate-card group hover:scale-105 transition-transform duration-300">
        <div class="flex items-center mb-4">
          <div class="flex items-center justify-center h-12 w-12 rounded-xl bg-green-500/10 mr-4 border border-green-500/30">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-400">
              <path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white">{t('network.finance')}</h3>
        </div>
        <p class="text-secondary-text text-sm">DeFi, tokenomics, fundraising, compliance</p>
      </article>

      <!-- Legal & Compliance -->
      <article class="glass-card p-6 rounded-2xl animate-card group hover:scale-105 transition-transform duration-300">
        <div class="flex items-center mb-4">
          <div class="flex items-center justify-center h-12 w-12 rounded-xl bg-yellow-500/10 mr-4 border border-yellow-500/30">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-yellow-400">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
              <polyline points="14,2 14,8 20,8"/>
              <line x1="16" y1="13" x2="8" y2="13"/>
              <line x1="16" y1="17" x2="8" y2="17"/>
              <polyline points="10,9 9,9 8,9"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white">{t('network.legal')}</h3>
        </div>
        <p class="text-secondary-text text-sm">RWA, regulatory compliance, intellectual property</p>
      </article>

      <!-- Marketing & Community -->
      <article class="glass-card p-6 rounded-2xl animate-card group hover:scale-105 transition-transform duration-300">
        <div class="flex items-center mb-4">
          <div class="flex items-center justify-center h-12 w-12 rounded-xl bg-purple-500/10 mr-4 border border-purple-500/30">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-purple-400">
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
              <circle cx="9" cy="7" r="4"/>
              <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white">{t('network.marketing')}</h3>
        </div>
        <p class="text-secondary-text text-sm">Community building, content strategy, growth hacking</p>
      </article>

      <!-- Business Development -->
      <article class="glass-card p-6 rounded-2xl animate-card group hover:scale-105 transition-transform duration-300">
        <div class="flex items-center mb-4">
          <div class="flex items-center justify-center h-12 w-12 rounded-xl bg-indigo-500/10 mr-4 border border-indigo-500/30">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-indigo-400">
              <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
              <circle cx="9" cy="7" r="4"/>
              <path d="M22 21v-2a4 4 0 0 0-3-3.87"/>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white">{t('network.business')}</h3>
        </div>
        <p class="text-secondary-text text-sm">Partnerships, grants, investor relations, strategy</p>
      </article>

      <!-- Design & UX/UI -->
      <article class="glass-card p-6 rounded-2xl animate-card group hover:scale-105 transition-transform duration-300">
        <div class="flex items-center mb-4">
          <div class="flex items-center justify-center h-12 w-12 rounded-xl bg-pink-500/10 mr-4 border border-pink-500/30">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-pink-400">
              <rect x="2" y="3" width="20" height="14" rx="2" ry="2"/>
              <line x1="8" y1="21" x2="16" y2="21"/>
              <line x1="12" y1="17" x2="12" y2="21"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white">{t('network.design')}</h3>
        </div>
        <p class="text-secondary-text text-sm">UI/UX design, branding, user experience, visual identity</p>
      </article>
    </div>


  </div>
</section>

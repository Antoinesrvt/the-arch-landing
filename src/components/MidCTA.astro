---
// Mid CTA Section Component
import { useTranslations } from '../i18n/utils';

export interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = useTranslations(lang as any);
---

<!-- Mid CTA Section -->
<section class="py-20" aria-labelledby="cta-mid-title">
  <div class="container mx-auto px-6 text-center">
    <div class="glass-card rounded-2xl p-10 animate-fade-in">
       <h2 id="cta-mid-title" class="text-3xl font-bold text-white mb-4">{t('cta.mid.title')}</h2>
       <p class="text-secondary-text max-w-2xl mx-auto mb-8">{t('cta.mid.subtitle')}</p>
       <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a href="https://cal.com/thearch/meet-the-arch" target="_blank" rel="noopener noreferrer" class="bg-white text-gray-900 font-semibold py-3 px-8 rounded-lg inline-block w-full sm:w-auto animated-button">
          {t('contact.cta1')}
        </a>
         <a href="https://tally.so/r/3q1rOg" target="_blank" rel="noopener noreferrer" class="border border-white/50 text-white font-semibold py-3 px-8 rounded-lg w-full sm:w-auto btn-secondary-animated">
          {t('contact.cta2')}
        </a>
      </div>
    </div>
  </div>
</section>




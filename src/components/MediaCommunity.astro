---
// Media & Community Section Component
import { useTranslations } from '../i18n/utils';

export interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = useTranslations(lang as any);
---

<!-- Media & Community Section -->
<section id="media" class="py-24" aria-labelledby="media-title">
  <div class="container mx-auto px-6">
    <div class="text-center mb-20 animate-title">
      <h2 id="media-title" class="text-4xl md:text-5xl font-bold text-white tracking-tight" set:html={t('media.title')}>
      </h2>
      <p class="mt-4 text-lg text-secondary-text max-w-3xl mx-auto">
        {t('media.subtitle')}
      </p>
    </div>

    <!-- Media Platforms Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-16">
      <!-- Discord Community -->
      <article class="glass-card p-6 rounded-2xl animate-card group hover:scale-105 transition-transform">
        <div class="flex items-center mb-4">
          <div class="flex items-center justify-center h-12 w-12 rounded-xl bg-indigo-500/10 mr-4 border border-indigo-500/30">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" class="text-indigo-400">
              <path d="M20.317 4.3698a19.7913 19.7913 0 0 0-4.8851-1.5152.0741.0741 0 0 0-.0785.0371c-.211.3753-.4447.8648-.6083 1.2495-1.8447-.2762-3.68-.2762-5.4868 0-.1636-.3847-.3973-.8742-.6083-1.2495a.0741.0741 0 0 0-.0785-.0371 19.7363 19.7363 0 0 0-4.8851 1.5152.0699.0699 0 0 0-.0337.0185c-3.5214 4.3187-4.4222 9.2312-2.5644 13.9219a.0699.0699 0 0 0 .0177.0337c.0148.0107.0316.0185.0465.0252a19.8619 19.8619 0 0 0 5.7682 1.5945.0741.0741 0 0 0 .0864-.0204c.314-.2323.5997-.4914.8254-.771.2256-.2797.4187-.5844.5704-.9095a.0741.0741 0 0 0-.0296-.0864 12.9386 12.9386 0 0 1-2.2482-.9504.0699.0699 0 0 1-.0216-.0444 13.6769 13.6769 0 0 1-.0337-.1666.0699.0699 0 0 1 .0406-.0785c.1732-.0864.3483-.1815.5215-.2819a.0741.0741 0 0 1 .0883-.0074c3.4763 1.5596 7.248 1.5596 10.6868 0a.0741.0741 0 0 1 .0883.0074c.1732.1004.3483.1955.5215.2819a.0699.0699 0 0 1 .0406.0785c-.002.0537-.0109.1074-.0337.1666a.0699.0699 0 0 1-.0216.0444 12.9386 12.9386 0 0 1-2.2482.9504.0741.0741 0 0 0-.0296.0864c.1517.3251.3448.6298.5704.9095.2256.2797.5114.5391.8254.771a.0741.0741 0 0 0 .0864.0204 19.8619 19.8619 0 0 0 5.7682-1.5945.0699.0699 0 0 0 .0465-.0252c.0148-.0087.0316-.0166.0177-.0337 1.8578-4.6907.957-9.6032-2.5644-13.9219a.0699.0699 0 0 0-.0337-.0185zM8.02 15.3312c-.7824 0-1.418-1.094-1.418-2.4431s.6356-2.4431 1.418-2.4431c.7824 0 1.418 1.094 1.418 2.4431.002.002-.002.002-.002.002s-1.418 2.4411-1.416 2.4411zm7.9748 0c-.7824 0-1.418-1.094-1.418-2.4431s.6356-2.4431 1.418-2.4431c.7824 0 1.418 1.094 1.418 2.4431s-.6356 2.4431-1.418 2.4431z"/>
            </svg>
          </div>
          <div>
            <h3 class="text-xl font-bold text-white">{t('media.discord')}</h3>
            <!-- <p class="text-sm text-secondary-text">800+ {t('media.members')}</p> -->
          </div>
        </div>
        <p class="text-secondary-text text-sm mb-4">{t('media.discord.desc')}</p>
        <a href="https://discord.gg/ftK2fnaHa9" target="_blank" rel="noopener noreferrer" class="inline-flex items-center text-indigo-400 hover:text-indigo-300 transition-colors">
          {t('media.join')} <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
        </a>
      </article>

      <!-- Twitter Insights -->
      <article class="glass-card p-6 rounded-2xl animate-card group hover:scale-105 transition-transform">
        <div class="flex items-center mb-4">
          <div class="flex items-center justify-center h-12 w-12 rounded-xl bg-blue-500/10 mr-4 border border-blue-500/30">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" class="text-blue-400">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </div>
          <div>
            <h3 class="text-xl font-bold text-white">{t('media.twitter')}</h3>
            <!-- <p class="text-sm text-secondary-text">1,200+ followers</p> -->
          </div>
        </div>
        <p class="text-secondary-text text-sm mb-4">{t('media.twitter.desc')}</p>
        <a href="https://x.com/jointhearch" target="_blank" rel="noopener noreferrer" class="inline-flex items-center text-blue-400 hover:text-blue-300 transition-colors">
          {t('media.follow')} <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
        </a>
      </article>

      <!-- YouTube Educational -->
      <article class="glass-card p-6 rounded-2xl animate-card group hover:scale-105 transition-transform">
        <div class="flex items-center mb-4">
          <div class="flex items-center justify-center h-12 w-12 rounded-xl bg-red-500/10 mr-4 border border-red-500/30">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" class="text-red-400">
              <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/>
            </svg>
          </div>
          <div>
            <h3 class="text-xl font-bold text-white">{t('media.youtube')}</h3>
            <!-- <p class="text-sm text-secondary-text">Contenu éducatif</p> -->
          </div>
        </div>
        <p class="text-secondary-text text-sm mb-4">{t('media.youtube.desc')}</p>
        <a href="https://www.youtube.com/@jointhearch" target="_blank" rel="noopener noreferrer" class="inline-flex items-center text-red-400 hover:text-red-300 transition-colors">
          {t('media.watch')} <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
        </a>
      </article>

      <!-- Twitch Live -->
      <article class="glass-card p-6 rounded-2xl animate-card group hover:scale-105 transition-transform">
        <div class="flex items-center mb-4">
          <div class="flex items-center justify-center h-12 w-12 rounded-xl bg-purple-500/10 mr-4 border border-purple-500/30">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" class="text-purple-400">
              <path d="M2.149 0L.537 4.119v15.24h4.731V24h2.775l2.184-2.641h3.377l4.4-4.4V0H2.149zm19.164 13.612l-3.006 3.005H12.41l-2.184 2.641V16.617H5.666V2.641h15.647v11.24zm-3.006-8.246v6.005h-2.641V5.366h2.641zm-5.282 0v6.005H9.424V5.366h2.641z"/>
            </svg>
          </div>
          <div>
            <h3 class="text-xl font-bold text-white">{t('media.twitch')}</h3>
            <!-- <p class="text-sm text-secondary-text">Streaming régulier</p> -->
          </div>
        </div>
        <p class="text-secondary-text text-sm mb-4">{t('media.twitch.desc')}</p>
        <a href="#" class="inline-flex items-center text-purple-400 hover:text-purple-300 transition-colors">
          {t('media.follow')} <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
        </a>
      </article>

      <!-- Blog & Analysis -->
      <article class="glass-card p-6 rounded-2xl animate-card group hover:scale-105 transition-transform">
        <div class="flex items-center mb-4">
          <div class="flex items-center justify-center h-12 w-12 rounded-xl bg-green-500/10 mr-4 border border-green-500/30">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-400">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
              <polyline points="14,2 14,8 20,8"/>
              <line x1="16" y1="13" x2="8" y2="13"/>
              <line x1="16" y1="17" x2="8" y2="17"/>
              <polyline points="10,9 9,9 8,9"/>
            </svg>
          </div>
          <div>
            <h3 class="text-xl font-bold text-white">{t('media.blog')}</h3>
            <!-- <p class="text-sm text-secondary-text">Articles & analyses</p> -->
          </div>
        </div>
        <p class="text-secondary-text text-sm mb-4">{t('media.blog.desc')}</p>
        <a href="#" class="inline-flex items-center text-green-400 hover:text-green-300 transition-colors">
          {t('media.read')} <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
        </a>
      </article>

      <!-- Events & Networking -->
      <article class="glass-card p-6 rounded-2xl animate-card group hover:scale-105 transition-transform">
        <div class="flex items-center mb-4">
          <div class="flex items-center justify-center h-12 w-12 rounded-xl bg-orange-500/10 mr-4 border border-orange-500/30">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-orange-400">
              <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
              <polyline points="9,22 9,12 15,12 15,22"/>
            </svg>
          </div>
          <div>
            <h3 class="text-xl font-bold text-white">{t('media.events')}</h3>
            <!-- <p class="text-sm text-secondary-text">Événements & networking</p> -->
          </div>
        </div>
        <p class="text-secondary-text text-sm mb-4">{t('media.events.desc')}</p>
        <a href="#" class="inline-flex items-center text-orange-400 hover:text-orange-300 transition-colors">
          {t('media.discover')} <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
        </a>
      </article>
    </div>

    <!-- Community Stats -->
    <!-- <div class="glass-card rounded-2xl p-8 text-center animate-fade-in">
      <div class="grid md:grid-cols-4 gap-8">
        <div>
          <div class="text-4xl font-bold text-white mb-2">800+</div>
          <div class="text-secondary-text">Discord</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-white mb-2">1.2K</div>
          <div class="text-secondary-text">Twitter</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-white mb-2">30K+</div>
          <div class="text-secondary-text">{t('media.total.community')}</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-white mb-2">24/7</div>
          <div class="text-secondary-text">{t('media.active.content')}</div>
        </div>
      </div>
    </div> -->
  </div>
</section>

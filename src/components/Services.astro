---
// Services Section Component
import { useTranslations } from '../i18n/utils';

export interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = useTranslations(lang as any);
---

<!-- Services Section -->
<section id="services" class="py-24" aria-labelledby="services-title">
  <div class="container mx-auto px-6">
    <div class="text-center mb-20 animate-title">
      <h2 id="services-title" class="text-4xl md:text-5xl font-bold text-white tracking-tight" set:html={t('services.title')}></h2>
      <p class="mt-4 text-lg text-secondary-text max-w-2xl mx-auto">
        {t('services.subtitle')}
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-8">
      <!-- Tech Service Card -->
      <article class="glass-card p-6 lg:p-8 rounded-2xl animate-card group hover:scale-105 transition-transform duration-300">
        <div class="flex items-center justify-center h-14 w-14 rounded-xl bg-indigo-500/10 mb-6 border border-indigo-500/30" aria-hidden="true">
          <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-indigo-400">
            <path d="m18 16 4-4-4-4"/>
            <path d="m6 8-4 4 4 4"/>
            <path d="m14.5 4-5 16"/>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-white mb-3">{t('service1.title')}</h3>
        <p class="text-secondary-text mb-4">
          {t('service1.desc')}
        </p>
        <div class="space-y-2">
          <div class="flex items-center text-sm text-secondary-text">
            <svg class="w-4 h-4 mr-2 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            Smart contracts & audits
          </div>
          <div class="flex items-center text-sm text-secondary-text">
            <svg class="w-4 h-4 mr-2 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            Blockchain architecture
          </div>
          <div class="flex items-center text-sm text-secondary-text">
            <svg class="w-4 h-4 mr-2 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            Gas fees optimization
          </div>
        </div>
      </article>

      <!-- Finance Service Card -->
      <article class="glass-card p-6 lg:p-8 rounded-2xl animate-card group hover:scale-105 transition-transform duration-300">
        <div class="flex items-center justify-center h-14 w-14 rounded-xl bg-green-500/10 mb-6 border border-green-500/30" aria-hidden="true">
          <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-400">
            <path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-white mb-3">{t('service2.title')}</h3>
        <p class="text-secondary-text mb-4">
          {t('service2.desc')}
        </p>
        <div class="space-y-2">
          <div class="flex items-center text-sm text-secondary-text">
            <svg class="w-4 h-4 mr-2 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>

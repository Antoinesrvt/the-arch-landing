---
// Services Section Component - OPTION C: WAVE-BASED LAYOUT
import { useTranslations } from '../i18n/utils';
import type { Language, TranslationFunction } from '../types';

export interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = useTranslations(lang) as TranslationFunction;
---

<section id="services-option-c" class="py-24 relative overflow-hidden" aria-labelledby="services-title-c">
  <!-- Animated wave background -->
  <div class="absolute inset-0">
    <svg class="absolute bottom-0 w-full h-full opacity-10" viewBox="0 0 1200 600" preserveAspectRatio="none">
      <path d="M0,300 Q300,200 600,300 T1200,300 L1200,600 L0,600 Z" fill="url(#wave-gradient-1)" class="wave-animation-1"/>
      <path d="M0,350 Q300,250 600,350 T1200,350 L1200,600 L0,600 Z" fill="url(#wave-gradient-2)" class="wave-animation-2"/>
      <path d="M0,400 Q300,300 600,400 T1200,400 L1200,600 L0,600 Z" fill="url(#wave-gradient-3)" class="wave-animation-3"/>
      <defs>
        <linearGradient id="wave-gradient-1" x1="0%" y1="0%" x2="100%" y2="0%">
          <stop offset="0%" style="stop-color:#8B5CF6;stop-opacity:0.3" />
          <stop offset="100%" style="stop-color:#3B82F6;stop-opacity:0.3" />
        </linearGradient>
        <linearGradient id="wave-gradient-2" x1="0%" y1="0%" x2="100%" y2="0%">
          <stop offset="0%" style="stop-color:#6366F1;stop-opacity:0.2" />
          <stop offset="100%" style="stop-color:#10B981;stop-opacity:0.2" />
        </linearGradient>
        <linearGradient id="wave-gradient-3" x1="0%" y1="0%" x2="100%" y2="0%">
          <stop offset="0%" style="stop-color:#3B82F6;stop-opacity:0.1" />
          <stop offset="100%" style="stop-color:#EC4899;stop-opacity:0.1" />
        </linearGradient>
      </defs>
    </svg>
  </div>
  
  <div class="container mx-auto px-6 relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-20">
      <div class="inline-block mb-4 px-4 py-2 bg-blue-500/10 border border-blue-500/30 rounded-full text-blue-300 text-sm font-semibold">
        Option C: Wave-Based Layout
      </div>
      <h2 id="services-title-c" class="text-4xl md:text-5xl font-bold text-white tracking-tight mb-4" set:html={t('services.title')}></h2>
      <p class="text-lg md:text-xl text-gray-400 max-w-3xl mx-auto">
        {t('services.subtitle')}
      </p>
    </div>

    <!-- WAVE LAYOUT - Desktop -->
    <div class="hidden lg:block max-w-6xl mx-auto mb-20">
      
      <!-- Wave Flow Container -->
      <div class="relative space-y-16">
        
        <!-- Wave 1: TOP LEFT → Tech -->
        <div class="wave-row wave-left">
          <div class="flex items-center gap-12 max-w-4xl">
            <!-- 360° Badge (LEFT) -->
            <div class="wave-badge-container shrink-0">
              <div class="relative group cursor-pointer">
                <div class="absolute inset-0 w-32 h-32 rounded-full bg-indigo-500/30 animate-ping opacity-50"></div>
                <div class="relative w-32 h-32 rounded-full bg-gradient-to-br from-indigo-600 via-purple-600 to-blue-600 border-2 border-white/30 shadow-2xl shadow-indigo-500/50 flex items-center justify-center group-hover:scale-110 transition-all duration-500">
                  <div class="text-center">
                    <div class="text-3xl font-bold bg-gradient-to-r from-white to-indigo-200 bg-clip-text text-transparent">360°</div>
                    <div class="text-xs text-white/80 font-semibold uppercase tracking-wider">Step 1</div>
                  </div>
                </div>
              </div>
              
              <!-- Flowing wave connector -->
              <svg class="absolute top-1/2 left-full w-24 h-24 -translate-y-1/2 pointer-events-none" viewBox="0 0 100 100">
                <path 
                  d="M 0 50 Q 25 30, 50 50 T 100 50" 
                  stroke="url(#wave-connector-1)" 
                  stroke-width="3" 
                  fill="none"
                  stroke-dasharray="5 5"
                  class="wave-dash-animation"
                />
                <defs>
                  <linearGradient id="wave-connector-1">
                    <stop offset="0%" style="stop-color:#6366F1;stop-opacity:1" />
                    <stop offset="100%" style="stop-color:#6366F1;stop-opacity:0.3" />
                  </linearGradient>
                </defs>
              </svg>
            </div>

            <!-- Service Card -->
            <div class="wave-card flex-1 group">
              <div class="p-8 rounded-3xl bg-gradient-to-br from-white/10 to-white/5 border border-indigo-500/30 hover:border-indigo-500/60 backdrop-blur-lg transition-all duration-500 hover:scale-105 hover:-translate-y-2 shadow-xl hover:shadow-2xl hover:shadow-indigo-500/30">
                <div class="flex items-start gap-6">
                  <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-indigo-500/30 to-indigo-600/50 border-2 border-indigo-400/50 flex items-center justify-center shrink-0 group-hover:rotate-12 group-hover:scale-110 transition-all duration-500 shadow-lg shadow-indigo-500/40">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" class="text-indigo-200">
                      <path d="m18 16 4-4-4-4"/><path d="m6 8-4 4 4 4"/><path d="m14.5 4-5 16"/>
                    </svg>
                  </div>
                  <div class="flex-1">
                    <h3 class="text-2xl font-bold mb-3 bg-gradient-to-r from-white via-indigo-100 to-indigo-200 bg-clip-text text-transparent">
                      {t('service1.title')}
                    </h3>
                    <p class="text-gray-300 leading-relaxed mb-4">
                      {t('service1.desc')}
                    </p>
                    <div class="flex flex-wrap gap-2">
                      <span class="px-4 py-2 text-sm font-semibold bg-indigo-500/15 border border-indigo-400/40 text-indigo-200 rounded-full hover:bg-indigo-500/25 transition-all">Smart Contracts</span>
                      <span class="px-4 py-2 text-sm font-semibold bg-indigo-500/15 border border-indigo-400/40 text-indigo-200 rounded-full hover:bg-indigo-500/25 transition-all">Audits</span>
                      <span class="px-4 py-2 text-sm font-semibold bg-indigo-500/15 border border-indigo-400/40 text-indigo-200 rounded-full hover:bg-indigo-500/25 transition-all">Optimization</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Wave 2: TOP RIGHT → Finance -->
        <div class="wave-row wave-right">
          <div class="flex items-center gap-12 max-w-4xl ml-auto flex-row-reverse">
            <!-- 360° Badge (RIGHT) -->
            <div class="wave-badge-container shrink-0">
              <div class="relative group cursor-pointer">
                <div class="absolute inset-0 w-32 h-32 rounded-full bg-emerald-500/30 animate-ping opacity-50 delay-300"></div>
                <div class="relative w-32 h-32 rounded-full bg-gradient-to-br from-emerald-600 via-green-600 to-teal-600 border-2 border-white/30 shadow-2xl shadow-emerald-500/50 flex items-center justify-center group-hover:scale-110 transition-all duration-500">
                  <div class="text-center">
                    <div class="text-3xl font-bold bg-gradient-to-r from-white to-emerald-200 bg-clip-text text-transparent">360°</div>
                    <div class="text-xs text-white/80 font-semibold uppercase tracking-wider">Step 2</div>
                  </div>
                </div>
              </div>
              
              <!-- Flowing wave connector -->
              <svg class="absolute top-1/2 right-full w-24 h-24 -translate-y-1/2 pointer-events-none rotate-180" viewBox="0 0 100 100">
                <path 
                  d="M 0 50 Q 25 30, 50 50 T 100 50" 
                  stroke="url(#wave-connector-2)" 
                  stroke-width="3" 
                  fill="none"
                  stroke-dasharray="5 5"
                  class="wave-dash-animation"
                />
                <defs>
                  <linearGradient id="wave-connector-2">
                    <stop offset="0%" style="stop-color:#10B981;stop-opacity:1" />
                    <stop offset="100%" style="stop-color:#10B981;stop-opacity:0.3" />
                  </linearGradient>
                </defs>
              </svg>
            </div>

            <!-- Service Card -->
            <div class="wave-card flex-1 group">
              <div class="p-8 rounded-3xl bg-gradient-to-br from-white/10 to-white/5 border border-emerald-500/30 hover:border-emerald-500/60 backdrop-blur-lg transition-all duration-500 hover:scale-105 hover:-translate-y-2 shadow-xl hover:shadow-2xl hover:shadow-emerald-500/30">
                <div class="flex items-start gap-6">
                  <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-emerald-500/30 to-emerald-600/50 border-2 border-emerald-400/50 flex items-center justify-center shrink-0 group-hover:rotate-12 group-hover:scale-110 transition-all duration-500 shadow-lg shadow-emerald-500/40">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" class="text-emerald-200">
                      <path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
                    </svg>
                  </div>
                  <div class="flex-1">
                    <h3 class="text-2xl font-bold mb-3 bg-gradient-to-r from-white via-emerald-100 to-emerald-200 bg-clip-text text-transparent">
                      {t('service2.title')}
                    </h3>
                    <p class="text-gray-300 leading-relaxed mb-4">
                      {t('service2.desc')}
                    </p>
                    <div class="flex flex-wrap gap-2">
                      <span class="px-4 py-2 text-sm font-semibold bg-emerald-500/15 border border-emerald-400/40 text-emerald-200 rounded-full hover:bg-emerald-500/25 transition-all">Tokenomics</span>
                      <span class="px-4 py-2 text-sm font-semibold bg-emerald-500/15 border border-emerald-400/40 text-emerald-200 rounded-full hover:bg-emerald-500/25 transition-all">Fundraising</span>
                      <span class="px-4 py-2 text-sm font-semibold bg-emerald-500/15 border border-emerald-400/40 text-emerald-200 rounded-full hover:bg-emerald-500/25 transition-all">Compliance</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Wave 3: BOTTOM LEFT → Marketing -->
        <div class="wave-row wave-left">
          <div class="flex items-center gap-12 max-w-4xl">
            <!-- 360° Badge (LEFT) -->
            <div class="wave-badge-container shrink-0">
              <div class="relative group cursor-pointer">
                <div class="absolute inset-0 w-32 h-32 rounded-full bg-pink-500/30 animate-ping opacity-50 delay-600"></div>
                <div class="relative w-32 h-32 rounded-full bg-gradient-to-br from-pink-600 via-rose-600 to-purple-600 border-2 border-white/30 shadow-2xl shadow-pink-500/50 flex items-center justify-center group-hover:scale-110 transition-all duration-500">
                  <div class="text-center">
                    <div class="text-3xl font-bold bg-gradient-to-r from-white to-pink-200 bg-clip-text text-transparent">360°</div>
                    <div class="text-xs text-white/80 font-semibold uppercase tracking-wider">Step 3</div>
                  </div>
                </div>
              </div>
              
              <!-- Flowing wave connector -->
              <svg class="absolute top-1/2 left-full w-24 h-24 -translate-y-1/2 pointer-events-none" viewBox="0 0 100 100">
                <path 
                  d="M 0 50 Q 25 30, 50 50 T 100 50" 
                  stroke="url(#wave-connector-3)" 
                  stroke-width="3" 
                  fill="none"
                  stroke-dasharray="5 5"
                  class="wave-dash-animation"
                />
                <defs>
                  <linearGradient id="wave-connector-3">
                    <stop offset="0%" style="stop-color:#EC4899;stop-opacity:1" />
                    <stop offset="100%" style="stop-color:#EC4899;stop-opacity:0.3" />
                  </linearGradient>
                </defs>
              </svg>
            </div>

            <!-- Service Card -->
            <div class="wave-card flex-1 group">
              <div class="p-8 rounded-3xl bg-gradient-to-br from-white/10 to-white/5 border border-pink-500/30 hover:border-pink-500/60 backdrop-blur-lg transition-all duration-500 hover:scale-105 hover:-translate-y-2 shadow-xl hover:shadow-2xl hover:shadow-pink-500/30">
                <div class="flex items-start gap-6">
                  <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-pink-500/30 to-pink-600/50 border-2 border-pink-400/50 flex items-center justify-center shrink-0 group-hover:rotate-12 group-hover:scale-110 transition-all duration-500 shadow-lg shadow-pink-500/40">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" class="text-pink-200">
                      <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                    </svg>
                  </div>
                  <div class="flex-1">
                    <h3 class="text-2xl font-bold mb-3 bg-gradient-to-r from-white via-pink-100 to-pink-200 bg-clip-text text-transparent">
                      {t('service3.title')}
                    </h3>
                    <p class="text-gray-300 leading-relaxed mb-4">
                      {t('service3.desc')}
                    </p>
                    <div class="flex flex-wrap gap-2">
                      <span class="px-4 py-2 text-sm font-semibold bg-pink-500/15 border border-pink-400/40 text-pink-200 rounded-full hover:bg-pink-500/25 transition-all">Community</span>
                      <span class="px-4 py-2 text-sm font-semibold bg-pink-500/15 border border-pink-400/40 text-pink-200 rounded-full hover:bg-pink-500/25 transition-all">Content</span>
                      <span class="px-4 py-2 text-sm font-semibold bg-pink-500/15 border border-pink-400/40 text-pink-200 rounded-full hover:bg-pink-500/25 transition-all">Media</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Wave 4: BOTTOM RIGHT → Strategy -->
        <div class="wave-row wave-right">
          <div class="flex items-center gap-12 max-w-4xl ml-auto flex-row-reverse">
            <!-- 360° Badge (RIGHT) -->
            <div class="wave-badge-container shrink-0">
              <div class="relative group cursor-pointer">
                <div class="absolute inset-0 w-32 h-32 rounded-full bg-amber-500/30 animate-ping opacity-50 delay-900"></div>
                <div class="relative w-32 h-32 rounded-full bg-gradient-to-br from-amber-600 via-yellow-600 to-orange-600 border-2 border-white/30 shadow-2xl shadow-amber-500/50 flex items-center justify-center group-hover:scale-110 transition-all duration-500">
                  <div class="text-center">
                    <div class="text-3xl font-bold bg-gradient-to-r from-white to-amber-200 bg-clip-text text-transparent">360°</div>
                    <div class="text-xs text-white/80 font-semibold uppercase tracking-wider">Step 4</div>
                  </div>
                </div>
              </div>
              
              <!-- Flowing wave connector -->
              <svg class="absolute top-1/2 right-full w-24 h-24 -translate-y-1/2 pointer-events-none rotate-180" viewBox="0 0 100 100">
                <path 
                  d="M 0 50 Q 25 30, 50 50 T 100 50" 
                  stroke="url(#wave-connector-4)" 
                  stroke-width="3" 
                  fill="none"
                  stroke-dasharray="5 5"
                  class="wave-dash-animation"
                />
                <defs>
                  <linearGradient id="wave-connector-4">
                    <stop offset="0%" style="stop-color:#F59E0B;stop-opacity:1" />
                    <stop offset="100%" style="stop-color:#F59E0B;stop-opacity:0.3" />
                  </linearGradient>
                </defs>
              </svg>
            </div>

            <!-- Service Card -->
            <div class="wave-card flex-1 group">
              <div class="p-8 rounded-3xl bg-gradient-to-br from-white/10 to-white/5 border border-amber-500/30 hover:border-amber-500/60 backdrop-blur-lg transition-all duration-500 hover:scale-105 hover:-translate-y-2 shadow-xl hover:shadow-2xl hover:shadow-amber-500/30">
                <div class="flex items-start gap-6">
                  <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-amber-500/30 to-amber-600/50 border-2 border-amber-400/50 flex items-center justify-center shrink-0 group-hover:rotate-12 group-hover:scale-110 transition-all duration-500 shadow-lg shadow-amber-500/40">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" class="text-amber-200">
                      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                    </svg>
                  </div>
                  <div class="flex-1">
                    <h3 class="text-2xl font-bold mb-3 bg-gradient-to-r from-white via-amber-100 to-amber-200 bg-clip-text text-transparent">
                      {t('service4.title')}
                    </h3>
                    <p class="text-gray-300 leading-relaxed mb-4">
                      {t('service4.desc')}
                    </p>
                    <div class="flex flex-wrap gap-2">
                      <span class="px-4 py-2 text-sm font-semibold bg-amber-500/15 border border-amber-400/40 text-amber-200 rounded-full hover:bg-amber-500/25 transition-all">Vision</span>
                      <span class="px-4 py-2 text-sm font-semibold bg-amber-500/15 border border-amber-400/40 text-amber-200 rounded-full hover:bg-amber-500/25 transition-all">Coordination</span>
                      <span class="px-4 py-2 text-sm font-semibold bg-amber-500/15 border border-amber-400/40 text-amber-200 rounded-full hover:bg-amber-500/25 transition-all">Management</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>

    <!-- Mobile Version -->
    <div class="lg:hidden space-y-8 max-w-xl mx-auto">
      
      <!-- Central 360° Badge -->
      <div class="flex justify-center mb-8">
        <div class="relative">
          <div class="absolute inset-0 w-28 h-28 rounded-full bg-purple-500/30 animate-ping opacity-50"></div>
          <div class="relative w-28 h-28 rounded-full bg-gradient-to-br from-purple-600 via-indigo-600 to-blue-600 border-2 border-white/30 shadow-2xl shadow-purple-500/50 flex items-center justify-center">
            <div class="text-center">
              <div class="text-4xl font-bold bg-gradient-to-r from-white to-purple-200 bg-clip-text text-transparent">360°</div>
              <div class="text-xs text-white/80 font-semibold uppercase tracking-wider mt-1">Services</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Mobile cards (same style as desktop) -->
      <article class="p-6 rounded-3xl bg-gradient-to-br from-white/10 to-white/5 border border-indigo-500/30 backdrop-blur-lg shadow-xl">
        <div class="flex items-start gap-4">
          <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-indigo-500/30 to-indigo-600/50 border-2 border-indigo-400/50 flex items-center justify-center shrink-0 shadow-lg shadow-indigo-500/40">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" class="text-indigo-200">
              <path d="m18 16 4-4-4-4"/><path d="m6 8-4 4 4 4"/><path d="m14.5 4-5 16"/>
            </svg>
          </div>
          <div class="flex-1">
            <h3 class="text-xl font-bold mb-2 bg-gradient-to-r from-white to-indigo-200 bg-clip-text text-transparent">{t('service1.title')}</h3>
            <p class="text-sm text-gray-300 leading-relaxed">{t('service1.desc')}</p>
          </div>
        </div>
      </article>

      <article class="p-6 rounded-3xl bg-gradient-to-br from-white/10 to-white/5 border border-emerald-500/30 backdrop-blur-lg shadow-xl">
        <div class="flex items-start gap-4">
          <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-emerald-500/30 to-emerald-600/50 border-2 border-emerald-400/50 flex items-center justify-center shrink-0 shadow-lg shadow-emerald-500/40">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" class="text-emerald-200">
              <path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
            </svg>
          </div>
          <div class="flex-1">
            <h3 class="text-xl font-bold mb-2 bg-gradient-to-r from-white to-emerald-200 bg-clip-text text-transparent">{t('service2.title')}</h3>
            <p class="text-sm text-gray-300 leading-relaxed">{t('service2.desc')}</p>
          </div>
        </div>
      </article>

      <article class="p-6 rounded-3xl bg-gradient-to-br from-white/10 to-white/5 border border-pink-500/30 backdrop-blur-lg shadow-xl">
        <div class="flex items-start gap-4">
          <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-pink-500/30 to-pink-600/50 border-2 border-pink-400/50 flex items-center justify-center shrink-0 shadow-lg shadow-pink-500/40">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" class="text-pink-200">
              <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/>
            </svg>
          </div>
          <div class="flex-1">
            <h3 class="text-xl font-bold mb-2 bg-gradient-to-r from-white to-pink-200 bg-clip-text text-transparent">{t('service3.title')}</h3>
            <p class="text-sm text-gray-300 leading-relaxed">{t('service3.desc')}</p>
          </div>
        </div>
      </article>

      <article class="p-6 rounded-3xl bg-gradient-to-br from-white/10 to-white/5 border border-amber-500/30 backdrop-blur-lg shadow-xl">
        <div class="flex items-start gap-4">
          <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-amber-500/30 to-amber-600/50 border-2 border-amber-400/50 flex items-center justify-center shrink-0 shadow-lg shadow-amber-500/40">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" class="text-amber-200">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
          </div>
          <div class="flex-1">
            <h3 class="text-xl font-bold mb-2 bg-gradient-to-r from-white to-amber-200 bg-clip-text text-transparent">{t('service4.title')}</h3>
            <p class="text-sm text-gray-300 leading-relaxed">{t('service4.desc')}</p>
          </div>
        </div>
      </article>
    </div>
  </div>
</section>

<style>
  /* Wave animations */
  .wave-animation-1 {
    animation: wave 15s ease-in-out infinite;
  }

  .wave-animation-2 {
    animation: wave 18s ease-in-out infinite reverse;
  }

  .wave-animation-3 {
    animation: wave 20s ease-in-out infinite;
  }

  @keyframes wave {
    0%, 100% {
      transform: translateX(0);
    }
    50% {
      transform: translateX(-50px);
    }
  }

  .wave-dash-animation {
    animation: dash 15s linear infinite;
  }

  @keyframes dash {
    to {
      stroke-dashoffset: -100;
    }
  }

